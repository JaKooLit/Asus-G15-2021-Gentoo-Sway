# Bind media keys on a keyboard to control volume and playback (using wireplumber and pipewire)
# NOTE asusctl to be installed for some hotkeys
bindsym xf86AudioRaiseVolume exec "~/.config/waybar/scripts/volume --inc"
bindsym xf86AudioLowerVolume exec "~/.config/waybar/scripts/volume --dec"
bindsym xf86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym xf86Launch1 exec rog-control-center # ASUS Armory crate button
bindsym xf86AudioMute exec wpctl set-mute @DEFAULT_SINK@ toggle #FN+F1
bindsym xf86KbdBrightnessDown exec brightnessctl -d asus::kbd_backlight set 33%- #FN+F2 Keyboard brightness down
bindsym xf86KbdBrightnessUp exec brightnessctl -d asus::kbd_backlight set 33%+ #FN+F3 Keyboard brightnes up
bindsym xf86Launch3 exec asusctl led-mode -n #FN+F4 Switch keyboard RGB profile
bindsym xf86Launch4 exec asusctl profile -n  #FN+F5 change of fan profiles (Quite, Balance Performance)
bindsym xf86MonBrightnessDown exec "~/.config/sway/exec/brightness --dec" #FN+F7
bindsym xf86MonBrightnessUp exec "~/.config/sway/exec/brightness --inc" #FN+F8
bindsym xf86TouchpadToggle input type:touchpad events toggle enabled disabled #FN+F10
bindsym xf86Sleep exec~/.config/sway/exec/lockscreen #FN+F11 (sleep button) #for swaylock
bindsym xf86Rfkill exec ~/.config/sway/exec/airplane-mode.sh #FN+F12

# uncomment for other systems
#bindsym xf86AudioPlay exec playerctl play-pause
#bindsym xf86AudioNext exec playerctl next
#bindsym xf86AudioPrev exec playerctl previous

# Moving around:

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
#    
# Or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
#
# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
#    
# Ditto, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right



# class		border  backgr. text		indicator	child_border
client.focused	$br     $br     $textColor	$brbug		$br

